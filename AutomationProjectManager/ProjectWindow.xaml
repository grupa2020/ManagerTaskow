<Window x:Class="AutomationProjectManager.ProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutomationProjectManager"
        mc:Ignorable="d"
        Title="ProjectWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10" >
            <WrapPanel>
                <Label x:Name="lblInfo1" Content="Wybór Tablicy Projektu:"  />
                <ComboBox x:Name="selectBoardBox" Margin="10,10,10,10" VerticalAlignment="Top"
                         SelectionChanged="selectBoardBox_SelectionChanged" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" MinWidth="400"/>
                <Button Content="Dodaj nową tablicę" Name="AddBoardBtn" Click="AddBoardBtn_Click"/>
            </WrapPanel>
            <ScrollViewer>
            <Grid x:Name="tasksGrid" ShowGridLines="true" Height="244">
           
            </Grid>
            </ScrollViewer>
            <Grid>
                <Button Content="Dodaj" Name="AddTaskBtn" Click="AddTaskBtn_Click"/>
            </Grid>
            



        </StackPanel>
    </Grid>
</Window>
