<Window x:Class="AutomationProjectManager.ProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutomationProjectManager"
        mc:Ignorable="d"
        Title="ProjectWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10,10,10,10" >
            <WrapPanel>
                <Label x:Name="lblInfo1" Content="Wybór Tablicy Projektu:"  />
                <ComboBox x:Name="selectBoardBox" Margin="10,10,10,10" VerticalAlignment="Top" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" MinWidth="400"/>
            </WrapPanel>
            <DataGrid Name="projectDataGrid" Margin="10,10,10,10" ItemsSource="{Binding}" AutoGenerateColumns="False"  IsReadOnly="True"  HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" MinHeight="250">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Task}" Header="ID Projektu" />
                    <DataGridTextColumn Binding="{Binding Name}" Header="Nazwa projektu" />
                    <DataGridTextColumn Binding="{Binding StartDate}" Header="Rozpoczęcie" />
                    <DataGridTextColumn Binding="{Binding Status}" Header="Status" />
                    <DataGridTextColumn Binding="{Binding OrganizationId}" Header="Numer Klienta" />
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
    </Grid>
</Window>
